<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>prep</id>

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>

        <!--karaf -->
        <fileSet>
            <outputDirectory>myfinance/MyFinance</outputDirectory>
            <directory>${project.build.directory}/../../karaf-full/target/assembly</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- Dockerfile -->
        <fileSet>
            <outputDirectory>myfinance</outputDirectory>
            <directory>${project.build.directory}/../docker/myfinance</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- dac.res and keystore-->
        <fileSet>
            <outputDirectory>myfinance</outputDirectory>
	    <directory>${project.build.directory}/../../../basedistributions/basedockerimages/docker/myfinance</directory>
            <includes>
                <include>dac.res</include>
                <include>devkeystore.jks</include>
            </includes>
    	</fileSet>

        <fileSet>
            <outputDirectory>myfinance/mfshell/lib</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target/lib</directory>
            <includes>
	            <include>**/*</include>
	    </includes>
	</fileSet>


        <!--mfshell -->
        <fileSet>
	    <outputDirectory>mfshell/mfshell/lib</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target/lib</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
		<outputDirectory>mfshell/mfshell</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target</directory>
            <includes>
                <include>run-job-mfshell.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>mfshell</outputDirectory>
            <directory>${project.build.directory}/../../../basedistributions/basedockerimages/docker/myfinance</directory>
            <includes>
                <include>dac.res</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>mfshell</outputDirectory>
            <directory>${project.build.directory}/../docker/mfshell</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    
    </fileSets>


</assembly>
